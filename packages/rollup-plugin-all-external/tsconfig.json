{
  "compilerOptions": {
    "lib": ["ESNext", "DOM", "DOM.Iterable"],
    "esModuleInterop": true,
    "moduleResolution": "node",
    "isolatedModules": true,
    "composite": false,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "strict": true,
    "declarationDir": "./dist",
    "declaration": true,
    "emitDeclarationOnly": true,
    "module": "ESNext"
  },
  "exclude": ["**/dist", "**/test"]
}
