{
  "name": "@paperdave/logger",
  "version": "2.2.0",
  "description": "Versitle logging with spinners and progress bars.",
  "keywords": [
    "logger",
    "bun"
  ],
  "author": "Dave Caruso <dave@davecode.net>",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist",
    "screenshot.png"
