  },
  "dependencies": {
    "ansi-escapes": "^5.0.0",
    "chalk": "4",
    "strip-ansi": "^7.0.1"
  },
  "devDependencies": {
    "@paperdave/utils": "workspace:^1.2.0",
    "@types/node": "^18.0.3",
    "@types/wrap-ansi": "^8.0.1",
    "bun-types": "^0.1.2",
    "esbuild": "^0.14.39",
    "mitata": "^0.1.6",
    "typescript": "^4.6.4"
  },
  "engines": {
    "bun": ">=0.1.9",
    "node": ">=16"
  },
  "publishConfig": {
    "access": "public"
  },
  "paperdave-status": "stable"
